# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab
indent_size = 4

# Indentation override for languages
[**.{js,jsx,coffee,php}]
indent_style = tab
indent_size = 4

# Indentation override for all html templates
[**.{html,hbl,pug}]
indent_style = tab
indent_size = 4

# Indentation override for all styles
[**.{css,styl,scss,sass,less}]
indent_style = tab
indent_size = 4

# Indentation override for all JSON
[**.json}]
indent_style = tab
indent_size = 4
